<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/EstilosEconet.css">
    <title>@ViewData["Title"] - EcoNet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcoNet.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white HeaderBorder box-shadow mb-3">
            <div class="container-fluid EspaciadoLateral">
                <img src="https://images.vexels.com/media/users/3/139159/isolated/preview/9cf4b4749278aa9358a826c7150b51a8-c-rculo-redondo.png" width="100px" height="100px" alt="Alternate Text" />
                <h2 class="navbar-brand me-auto" asp-area="" asp-controller="Home" asp-action="Index">EcoNet</h2>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <form action="/action_page.php" class="d-flex align-items-center">
                            <input type="image" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/55/Magnifying_glass_icon.svg/490px-Magnifying_glass_icon.svg.png" class="me-2" alt="Search" width="40rem" height="40rem">
                            <input type="search" id="gsearch" name="gsearch" class="Buscador form-control me-5" placeholder="Buscar..." width="20rem">
                        </form>
                        <button class="BotonHeader">Login/Registrarse</button>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="EspaciadoLateral">
        <main role="main" class="pb-3">
            @RenderBody() @* Aquí se muestra la página *@
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - EcoNet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
